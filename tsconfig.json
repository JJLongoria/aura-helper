{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"outDir": "out",
		"lib": [
			"es6"
		],
		"allowUnreachableCode": false,
		"noImplicitAny": true,
		"sourceMap": true,
		"rootDir": "src",
		"strict": true, 
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"noUnusedParameters": true,  
		"esModuleInterop": true,
		"declaration": true,
		"isolatedModules": true
	},
	"include": [
        "./**/*"
    ],
	"exclude": [
		"node_modules",
		".vscode-test",
		"./out",
        "./out/**/*"
	]
}
