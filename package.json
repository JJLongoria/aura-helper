{
	"name": "aura-helper",
	"publisher": "Kanko",
	"displayName": "Aura Helper",
	"description": "Salesforce extension for make more powerfull and easy the development work. Work with Apex and Lightning",
	"version": "1.1.0",
	"engines": {
		"vscode": "^1.37.0"
	},
	"icon": "resources/images/icon.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/JJLongoria/aura-helper"
	},
	"categories": [
		"Programming Languages",
		"Snippets",
		"Other"
	],
	"keywords": [
		"aura",
		"aura helper",
		"helper",
		"lightning",
		"salesforce",
		"apex",
		"visualforce",
		"documentation",
		"javadoc",
		"apexdoc",
		"aura documentation",
		"auradoc"
	],
	"activationEvents": [
		"*"
	],
	"main": "./extension.js",
	"contributes": {
		"configuration": {
			"title": "Aura Helper",
			"properties": {
				"aurahelper.activeAttributeSuggest": {
					"type": "boolean",
					"default": true,
					"description": "Use Code Suggestion and autocompletion tools for component attributes (v.)"
				},
				"aurahelper.activeControllerFunctionsSuggest": {
					"type": "boolean",
					"default": true,
					"description": "Use Code Suggestion and autocompletion tools for JavaScript Controller Functions (c.)"
				},
				"aurahelper.activeHelperFunctionsSuggest": {
					"type": "boolean",
					"default": true,
					"description": "Use Code Suggestion and autocompletion tools for JavaScript Helper Functions (helper.)"
				},
				"aurahelper.activeControllerMethodsSuggest": {
					"type": "boolean",
					"default": true,
					"description": "Use Code Suggestion and autocompletion tools for Apex Controller Methods (c.) on javascript files"
				},
				"aurahelper.activeComponentSuggest": {
					"type": "boolean",
					"default": true,
					"description": "Use Code Suggestion and autocompletion tools for show custom components"
				},
				"aurahelper.activeComponentCallSuggest": {
					"type": "boolean",
					"default": true,
					"description": "Use Code Suggestion and autocompletion tools for show available attributes for standard components when are called"
				},
				"aurahelper.activeCustomComponentCallSuggest": {
					"type": "boolean",
					"default": true,
					"description": "Use Code Suggestion and autocompletion tools for show available attributes for custom components when are called"
				},
				"aurahelper.activeApexCommentSuggestion": {
					"type": "boolean",
					"default": true,
					"description": "Use Code Suggestion and autocompletion tools for create a method or class comment on Apex"
				}
			}
		},
		"commands": [
			{
				"command": "aurahelper.completion.apex.comment.command",
				"title": "AuraHelper: Add Apex Comment"
			},
			{
				"command": "aurahelper.completion.js.function",
				"title": "AuraHelper: Add Javascript Aura Function"
			},
			{
				"command": "aurahelper.completion.documentation.method",
				"title": "AuraHelper: Add Method Block to Documentation"
			},
			{
				"command": "aurahelper.template.apex.comment",
				"title": "AuraHelper: Edit Apex Comment Template"
			},
			{
				"command": "aurahelper.template.aura.documentation",
				"title": "AuraHelper: Edit Aura Documentation Template"
			},
			{
				"command": "aurahelper.completion.aura.documentation",
				"title": "AuraHelper: Generate Aura Documentation"
			},
			{
				"command": "aurahelper.help",
				"title": "AuraHelper: Help"
			},
			{
				"command": "aurahelper.file.new.aura",
				"title": "AuraHelper: New Aura File"
			},
			{
				"command": "aurahelper.metadata.refresh.index",
				"title": "AuraHelper: Refresh Metadata Index"
			},
			{
				"command": "aurahelper.metadata.refresh.object",
				"title": "AuraHelper: Refresh Metadata Index for Object"
			}
		],
		"languages": [
			{
				"id": "apex",
				"extensions": [
					".apex",
					".cls",
					".trigger"
				],
				"aliases": [
					"Apex"
				]
			},
			{
				"id": "xml",
				"extensions": [
					".auradoc",
					".cmp"
				],
				"aliases": [
					"XML"
				]
			},
			{
				"id": "html",
				"extensions": [
					".auradoc",
					".cmp"
				],
				"aliases": [
					"HTML"
				]
			},
			{
				"id": "javascript",
				"extensions": [
					".js"
				],
				"aliases": [
					"JavaScript"
				]
			}
		],
		"snippets": [
			{
				"language": "javascript",
				"path": "./resources/snippets/jsSnippets.json"
			},
			{
				"language": "xml",
				"path": "./resources/snippets/auraSnippets.json"
			},
			{
				"language": "html",
				"path": "./resources/snippets/auraSnippets.json"
			},
			{
				"language": "xml",
				"path": "./resources/snippets/sldsSnippets.json"
			},
			{
				"language": "html",
				"path": "./resources/snippets/sldsSnippets.json"
			}
		],
		"menus":{
			"explorer/context":[{
				"when":"resourceExtname == .cmp",
				"command": "aurahelper.file.new.aura",
				"group": "navigation"
			},
			{
				"when":"resourceExtname == .auradoc",
				"command": "aurahelper.completion.aura.documentation",
				"group": "navigation"
			},
			{
				"when":"resource =~ /./aura/ && resourceExtname =~ /^(?!(.app|.cmp|.auradoc|.evt|.intf|.css|.design|.html|.js|.svg)$)/",
				"command": "aurahelper.file.new.aura",
				"group": "navigation"
			}],
			"editor/context":[{
				"when":"resourceExtname == .cmp",
				"command": "aurahelper.file.new.aura",
				"group": "auraHelper@1"
			},
			{
				"when":"resourceExtname == .auradoc",
				"command": "aurahelper.completion.aura.documentation",
				"group": "auraHelper@1"
			}]
		}
	},
	"scripts": {
		"test": "node ./test/runTest.js"
	},
	"license": "SEE LICENSE IN LICENSE.txt",
	"bugs": {
		"url": "https://github.com/JJLongoria/aura-helper/issues",
		"email": "juanjoselongoria@gmail.com"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.37.0",
		"eslint": "^5.13.0",
		"glob": "^7.1.4",
		"mocha": "^6.1.4",
		"typescript": "^3.3.1",
		"vscode-test": "^1.0.2"
	}
}
