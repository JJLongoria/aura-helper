{
	"name": "aura-helper",
	"publisher": "Accenture",
	"displayName": "Aura Helper",
	"description": "Extensi√≥n for some util actions for make more easy the development work",
	"version": "0.1.0",
	"engines": {
		"vscode": "^1.37.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/JJLongoria/aura-helper"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:aurahelper.genAuraDoc",
		"onCommand:aurahelper.addMethodBlock",
		"onCommand:aurahelper.addApexComment",
		"onCommand:aurahelper.addJsFunction",


		"onLanguage:apex",
		"onLanguage:xml",
		"onLanguage:javascript"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "aurahelper.genAuraDoc",
				"title": "AuraHelper: Generate Aura Documentation"
			},
			{
				"command": "aurahelper.addMethodBlock",
				"title": "AuraHelper: Add Method Block to Doc"
			},
			{
				"command": "aurahelper.addApexComment",
				"title": "AuraHelper: Add Apex Comment"
			},
			{
				"command": "aurahelper.addJsFunction",
				"title": "AuraHelper: Add Javascript Aura Function"
			}
		],
		"snippets": [
			{
				"language": "javascript",
				"path": "./resources/snippets/jsSnippets.json"
			},
			{
				"language": "xml",
				"path": "./resources/snippets/auraSnippets.json"
			}
		],
		"languages": [
			{
				"id": "apex",
				"extensions": [
					".apex",
					".cls",
					".trigger",
					".tgr"
				],
				"aliases": [
					"Apex"
				]
			},
			{
				"id": "xml",
				"extensions": [
					".auradoc",
					".cmp",
					".template"
				],
				"aliases": [
					"Aura"
				]
			},
			{
				"id": "javascript",
				"extensions": [
					".js"
				],
				"aliases": [
					"JavaScript"
				]
			}
		]
	},
	"scripts": {
		"test": "node ./test/runTest.js"
	},
	"license": "SEE LICENSE IN LICENSE.txt",
	"bugs": {
		"url": "https://github.com/JJLongoria/aura-helper/issues",
		"email": "juan.longoria.lopez@accenture.com"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.37.0",
		"eslint": "^5.13.0",
		"glob": "^7.1.4",
		"mocha": "^6.1.4",
		"typescript": "^3.3.1",
		"vscode-test": "^1.0.2"
	}
}
