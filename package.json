{
	"name": "aura-helper",
	"publisher": "Kanko",
	"displayName": "Aura Helper",
	"description": "Salesforce extension for make more powerfull and easy the development work. Work with Apex and Lightning",
	"version": "1.0.0",
	"engines": {
		"vscode": "^1.37.0"
	},
	"icon": "resources/images/icon.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/JJLongoria/aura-helper"
	},
	"categories": [
		"Programming Languages",
		"Snippets",
		"Other"
	],
	"keywords": [
		"aura",
		"aura helper",
		"helper",
		"lightning",
		"salesforce",
		"apex",
		"visualforce"
	],
	"activationEvents": [
		"*"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "aurahelper.addApexComment",
				"title": "AuraHelper: Add Apex Comment"
			},
			{
				"command": "aurahelper.addJsFunction",
				"title": "AuraHelper: Add Javascript Aura Function"
			},
			{
				"command": "aurahelper.addMethodBlock",
				"title": "AuraHelper: Add Method Block to Doc"
			},
			{
				"command": "aurahelper.editApexCommentTemplate",
				"title": "AuraHelper: Edit Apex Comment Template"
			},
			{
				"command": "aurahelper.editAuraDocumentationTemplate",
				"title": "AuraHelper: Edit Aura Documentation Template"
			},
			{
				"command": "aurahelper.genAuraDoc",
				"title": "AuraHelper: Generate Aura Documentation"
			},
			{
				"command": "aurahelper.help",
				"title": "AuraHelper: Help"
			},
			{
				"command": "aurahelper.newAuraFile",
				"title": "AuraHelper: New Aura File"
			}
		],
		"snippets": [
			{
				"language": "javascript",
				"path": "./resources/snippets/jsSnippets.json"
			},
			{
				"language": "xml",
				"path": "./resources/snippets/auraSnippets.json"
			},
			{
				"language": "html",
				"path": "./resources/snippets/auraSnippets.json"
			}
		],
		"languages": [
			{
				"id": "apex",
				"extensions": [
					".apex",
					".cls",
					".trigger",
					".tgr"
				],
				"aliases": [
					"Apex"
				]
			},
			{
				"id": "xml",
				"extensions": [
					".auradoc",
					".cmp",
					".template"
				],
				"aliases": [
					"XML"
				]
			},
			{
				"id": "html",
				"extensions": [
					".auradoc",
					".cmp",
					".template"
				],
				"aliases": [
					"HTML"
				]
			},
			{
				"id": "javascript",
				"extensions": [
					".js"
				],
				"aliases": [
					"JavaScript"
				]
			}
		],
		"menus":{
			"explorer/context":[{
				"when":"resourceExtname == .cmp",
				"command": "aurahelper.newAuraFile",
				"group": "navigation"
			},
			{
				"when":"resourceExtname == .auradoc",
				"command": "aurahelper.genAuraDoc",
				"group": "navigation"
			},
			{
				"when":"resource =~ /./aura/ && resourceExtname =~ /^(?!(.app|.cmp|.auradoc|.evt|.intf|.css|.design|.html|.js|.svg)$)/",
				"command": "aurahelper.newAuraFile",
				"group": "navigation"
			}],
			"editor/context":[{
				"when":"resourceExtname == .cmp",
				"command": "aurahelper.newAuraFile",
				"group": "auraHelper@1"
			},
			{
				"when":"resourceExtname == .auradoc",
				"command": "aurahelper.genAuraDoc",
				"group": "auraHelper@1"
			}]
		}
	},
	"scripts": {
		"test": "node ./test/runTest.js"
	},
	"license": "SEE LICENSE IN LICENSE.txt",
	"bugs": {
		"url": "https://github.com/JJLongoria/aura-helper/issues",
		"email": "juanjoselongoria@gmail.com"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.37.0",
		"eslint": "^5.13.0",
		"glob": "^7.1.4",
		"mocha": "^6.1.4",
		"typescript": "^3.3.1",
		"vscode-test": "^1.0.2"
	}
}
